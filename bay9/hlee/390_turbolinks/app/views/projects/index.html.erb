<h1>Projects</h1>

<div id="projects">
<% @projects.each do |project| %>
  <h2><%= link_to project.name, project %></h2>
  <%= pluralize project.tasks.size, "task" %> |
  <%= link_to "Rename", edit_project_path(project) %> |
  <%= link_to "Destroy", project, confirm: "Are you sure?", method: "delete" %>
<% end %>
</div>

<p><%= link_to "New Project", new_project_path %></p>