<h1>Products</h1>

<p><%= link_to "Reverse sort order", direction: (params[:direction] == "desc" ? "asc" : "desc") %></p>

<table id="products">
  <tr>
    <th>Product Name</th>
    <th>Release Date</th>
    <th>Price</th>
  </tr>
<% @products.each do |product| %>
  <tr>
    <td><%= link_to(product.name, product.name) %></td>
    <td><%= product.released_at.strftime("%B %e, %Y") %></td>
    <td><%= number_to_currency(product.price) %></td>
  </tr>
<% end %>
</table>
