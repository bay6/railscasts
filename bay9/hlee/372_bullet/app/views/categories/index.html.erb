<h1>Categories</h1>

<% @categories.each do |category| %>
  <div class="category">
    <h2><%= link_to category.name, category %></h2>
    <ul>
      <% category.products.each do |product| %>
        <li><%= product.name %> (<%= number_to_currency product.price %>)</li>
      <% end %>
    </ul>
  </div>
<% end %>
