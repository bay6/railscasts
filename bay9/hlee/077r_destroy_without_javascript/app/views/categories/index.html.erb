<h1>Categories</h1>

<ul>
<% @categories.each do |category| %>
  <li>
    <%= category.name %>
    <%= link_to "Edit", edit_category_path(category) %> |
    <%= link_to "Destroy", category, method: :delete, data: {confirm: "Are you sure?"} %>
  </li>
<% end %>
</ul>

<p><%= link_to "New Category", new_category_path %></p>
