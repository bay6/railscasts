<h1>Raffle</h1>

<div ng-controller='RaffleCtrl'>
  <form ng-submit='addEntry()'>
    <input type='text' ng-model='newEntry.name'></input>
    <input type='submit' value='Add'>
  </form>

  <ul>
    <li ng-repeat='entry in entries'>
      {{ entry.name }}
      <span ng-show='entry.winner' ng-class="{highlight: lastWinner == entry}" class='winner'>WINNER</span>
    </li>
  </ul>

  <button ng-click='drawWinner()'>Draw Winner</button>
</div>
