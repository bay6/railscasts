<h1>Friends's Activities</h1>
<% @activities.each do |activity| %>
  <div class="activity">
    <%= link_to activity.owner.name, activity.owner if activity.owner %>
    added comment to 
    <%= link_to activity.trackable.recipe.name, activity.trackable.recipe if activity.trackable.class.to_s == "Comment" %>
  </div>
<% end %>
