<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row collapse">
    <div class="small-3 columns">
      <%= f.label :name, class: "right inline" %>
    </div>
    <div class="small-8 columns"><%= f.text_field :name %></div>
  </div>
  <div class="row collapse">
    <div class="small-3 columns">
      <%= f.label :price, class: "right inline", title: "Price in USD", data: {tooltip: true} %>
    </div>
    <div class="small-8 columns"><%= f.text_field :price %></div>
  </div>
  <div class="row collapse">
    <div class="small-8 small-offset-4 columns"><%= f.submit class: "button radius" %></div>
  </div>
<% end %>
