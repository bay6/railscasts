<h1>Users</h1>

<%= form_tag users_path, method: :get do %>
  <%= text_field_tag :query, params[:query] %>
  <%= submit_tag "Search" %>
<% end %>

<% if @users.empty? %>
  <p>No users found</p>
<% else %>
  <ul>
  <% @users.each do |user| %>
    <li><%= user.username %></li>
  <% end %>
  </ul>
<% end %>

<%= link_to "Download as CSV", format: "csv" %>
